<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\BrandStorage\Persistence"
          package="src.Orm.Zed.BrandStorage.Persistence">

    <!-- TODO define your tables here -->
    <table name="spy_brand_storage" identifierQuoting="true">
        <column name="id_brand_storage" type="BIGINT" autoIncrement="true" primaryKey="true"/>
        <column name="fk_brand" type="INTEGER" required="true"/>
        <index name="spy_brand_storage-fk_brand">
            <index-column name="fk_brand"/>
        </index>
        <id-method-parameter value="spy_brand_storage_pk_seq"/>
        <behavior name="synchronization">
            <parameter name="resource" value="spy_brand"/>
            <parameter name="locale" required="true"/>
            <parameter name="key_suffix_column" value="fk_brand"/>
            <parameter name="queue_group" value="sync.storage.brand"/>
            <parameter name="queue_pool" value="synchronizationPool"/>
            <parameter name="queue_pool" value="synchronizationPool"/>
        </behavior>
        <behavior name="timestampable"/>
    </table>
</database>
