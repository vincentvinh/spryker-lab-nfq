<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="BrandSearch">
        <property name="idBrand" type="int"/>
        <property name="name" type="string"/>
        <property name="description" type="string"/>
        <property name="isHighlight" type="bool"/>
        <property name="isSearchable" type="bool"/>
        <property name="logo" type="string"/>
        <property name="productAbstractIds" type="array"/>
        <property name="localizedAttributes" type="BrandSearchLocalizedAttribute[]" singular="localizedAttributes"/>
    </transfer>

    <transfer name="BrandSearchLocalizedAttribute">
        <property name="locale" type="Locale"/>
        <property name="metaDescription" type="string"/>
    </transfer>

    <transfer name="ProductPayload">
        <property name="brand" type="BrandSearch"/>
    </transfer>
    <transfer name="ProductPageSearch">
        <property name="brand" type="BrandSearch"/>
    </transfer>
</transfers>
